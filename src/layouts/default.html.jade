doctype
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width")
    - var docTitle = document.title + site.title_append
    title= docTitle
    != getBlock("styles").add(["/styles/kraken.css"]).toHTML()
  body
    header
      div.subheader.clearfix
        a(href="/")
          img(src="/img/logo.svg", width="100", height="100", alt="WebPlatform Specs")
        div.title
          h1(class=document.subtitle ? "" : "onlyTitle")= document.articleTitle || document.title
          if document.subtitle
            div.subtitle= document.subtitle
    div.content!= content
    footer
      div.subfooter
        p
          a(href="http://creativecommons.org/publicdomain/zero/1.0/", rel="license") CC0
          |  • 
          a(href="https://github.com/webspecs/specs.webplatform.org") fork this
          |  • 
          a(href="/policy/anti-jerk.html") anti-jerk policy
    != getBlock("scripts").toHTML()
